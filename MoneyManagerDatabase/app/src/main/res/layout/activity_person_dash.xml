<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context="com.example.meta_knight.moneymanagerdatabase.PersonDash">

    <Button
            android:text="Join Company"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" tools:layout_editor_absoluteY="16dp"
            android:id="@+id/join"
            tools:layout_editor_absoluteX="16dp"
            android:onClick="JoinCompanyClicked"/>
    <Button
            android:text="Create Compnay"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" tools:layout_editor_absoluteY="16dp"
            android:id="@+id/create" app:layout_constraintLeft_toRightOf="@+id/join" android:layout_marginLeft="8dp"
            android:layout_marginRight="8dp" app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintHorizontal_bias="0.897"
            android:onClick="CreateCompanyClicked"/>
</android.support.constraint.ConstraintLayout>
